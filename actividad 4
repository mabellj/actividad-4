# Lista de datos
datos = [10, 12, 23, 23, 16, 23, 21, 16]

# 1. Calcular la Media
n = len(datos)  # Número de datos
suma = 0
for x in datos:
    suma += x
media = suma / n

# 2. Calcular la Mediana
# Ordenar los datos
datos_ordenados = sorted(datos)
if n % 2 == 1:  # Número impar de datos
    mediana = datos_ordenados[n // 2]
else:  # Número par de datos
    mediana = (datos_ordenados[n // 2 - 1] + datos_ordenados[n // 2]) / 2

# 3. Calcular la Moda
frecuencias = {}
for x in datos:
    if x in frecuencias:
        frecuencias[x] += 1
    else:
        frecuencias[x] = 1

moda = [k for k, v in frecuencias.items() if v == max(frecuencias.values())]

# 4. Calcular la Varianza
suma_cuadrados = 0
for x in datos:
    suma_cuadrados += (x - media) ** 2
varianza = suma_cuadrados / n

# 5. Calcular la Desviación Estándar
desviacion_estandar = varianza ** 0.5

# 6. Calcular el Coeficiente de Variación
coeficiente_variacion = (desviacion_estandar / media) * 100

# 7. Normalización Z
normalizacion_z = [(x - media) / desviacion_estandar for x in datos]

# Imprimir resultados
print(f"Media: {media}")
print(f"Mediana: {mediana}")
print(f"Moda: {moda}")
print(f"Varianza: {varianza}")
print(f"Desviación Estándar: {desviacion_estandar}")
print(f"Coeficiente de Variación: {coeficiente_variacion:.2f}%")
print(f"Normalización Z: {normalizacion_z}")
